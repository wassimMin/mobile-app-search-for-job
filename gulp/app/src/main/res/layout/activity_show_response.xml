<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:background="@color/home_background" android:padding="16dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:background="@color/light_gray" android:paddingBottom="8dp">
        <ImageView android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/application" android:layout_marginEnd="8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Explore Applications Responses" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    </LinearLayout>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="If you get accepted, the chat with the company will be opened." android:textAppearance="@style/TextAppearance.AppCompat.Small" android:paddingBottom="16dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Applications Response" android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:paddingBottom="8dp"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="0dp" android:background="@color/light_gray" android:layout_weight="1"/>
</LinearLayout>