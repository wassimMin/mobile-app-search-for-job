<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded_background">

    <TextView
        android:id="@+id/text_job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Job Title"/>

    <TextView
        android:id="@+id/text_job_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_job_title"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:text="Job Description"/>

    <TextView
        android:id="@+id/text_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_job_description"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:text="Company Name"/>

    <TextView
        android:id="@+id/text_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_company_name"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:text="Job Location"/>

    <TextView
        android:id="@+id/text_job_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_location"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:text="Job Category"/>

    <TextView
        android:id="@+id/text_salary_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_job_category"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:text="Job Salary Range"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_salary_range"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_edit_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/blue"
            android:minWidth="80dp"
            android:minHeight="40dp"
            android:padding="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_delete_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/red"
            android:minWidth="80dp"
            android:minHeight="40dp"
            android:padding="8dp"/>

    </LinearLayout>

</RelativeLayout>
